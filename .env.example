# JWT secret for signing tokens (REQUIRED - generate a long random string)
JWT_SECRET=your_long_random_secret_here_minimum_32_characters

# Email configuration for magic link authentication (optional)
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Frontend URL for CORS (API server)
FRONTEND_URL=http://localhost:5173

# MongoDB connection string (optional - currently using file-based storage)
MONGODB_URI=your_mongodb_connection_string_here

# API server port (optional, defaults to 3001)
PORT=3001
